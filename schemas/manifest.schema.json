{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "lcs.artifact.manifest.v1",
  "title": "LCS Output Manifest Artifact v1",
  "type": "object",
  "required": [
    "contract_version",
    "unit_id",
    "title",
    "locale",
    "generated_at",
    "outcomes",
    "artifacts",
    "gate_status",
    "interop"
  ],
  "properties": {
    "contract_version": {
      "type": "string",
      "pattern": "^1\\.0\\.0$"
    },
    "unit_id": {
      "type": "string",
      "pattern": "^[0-9]{3,}-[a-z0-9-]+$"
    },
    "title": {"type": "string", "minLength": 1},
    "locale": {"type": "string", "pattern": "^[A-Za-z]{2,3}(-[A-Za-z0-9]{2,8})*$"},
    "generated_at": {"type": "string", "format": "date-time"},
    "outcomes": {
      "type": "array",
      "minItems": 1,
      "maxItems": 20,
      "items": {
        "type": "object",
        "required": ["lo_id", "priority", "evidence_refs"],
        "properties": {
          "lo_id": {"type": "string", "pattern": "^LO[1-9][0-9]*$"},
          "priority": {"type": "string", "enum": ["P1", "P2", "P3", "P4", "P5"]},
          "evidence_refs": {
            "type": "array",
            "minItems": 1,
            "uniqueItems": true,
            "contains": {
              "type": "string",
              "pattern": "^brief:LO[1-9][0-9]*$"
            },
            "minContains": 1,
            "items": {
              "type": "string",
              "pattern": "^(brief|design|sequence|audit|outputs|rubric):.+"
            }
          }
        },
        "additionalProperties": false
      }
    },
    "artifacts": {
      "type": "array",
      "minItems": 1,
      "items": {
        "type": "object",
        "required": ["id", "type", "path", "media_type", "checksum"],
        "properties": {
          "id": {"type": "string", "minLength": 1, "pattern": "^[a-z0-9][a-z0-9-]{1,63}$"},
          "type": {"type": "string", "minLength": 1, "pattern": "^[a-z][a-z0-9-]{1,31}$"},
          "path": {"type": "string", "pattern": "^(?!/)(?!.*\\.\\./)[A-Za-z0-9._/-]+$"},
          "media_type": {"type": "string", "pattern": "^[a-z]+/[a-z0-9.+-]+$"},
          "checksum": {"type": "string", "pattern": "^sha256:[a-fA-F0-9]{64}$"}
        },
        "additionalProperties": false
      }
    },
    "gate_status": {
      "type": "object",
      "required": ["decision", "open_critical", "open_high"],
      "properties": {
        "decision": {"type": "string", "enum": ["PASS", "BLOCK"]},
        "open_critical": {"type": "integer", "minimum": 0},
        "open_high": {"type": "integer", "minimum": 0}
      },
      "additionalProperties": false
    },
    "interop": {
      "type": "object",
      "required": ["xapi"],
      "properties": {
        "xapi": {
          "type": "object",
          "required": ["version", "activity_id_set", "statement_template_refs"],
          "properties": {
            "version": {"type": "string", "pattern": "^(1\\.0\\.[0-9]+|2\\.0\\.[0-9]+)$"},
            "activity_id_set": {
              "type": "array",
              "minItems": 1,
              "uniqueItems": true,
              "items": {"type": "string", "pattern": "^https?://.+"}
            },
            "statement_template_refs": {
              "type": "array",
              "minItems": 1,
              "uniqueItems": true,
              "items": {"type": "string", "pattern": "^https?://.+"}
            }
          },
          "additionalProperties": false
        },
        "case": {"type": "object", "additionalProperties": true},
        "qti": {"type": "object", "additionalProperties": true},
        "lti": {"type": "object", "additionalProperties": true},
        "cmi5": {"type": "object", "additionalProperties": true}
      },
      "additionalProperties": false
    }
  },
  "allOf": [
    {
      "if": {
        "properties": {
          "gate_status": {
            "properties": {
              "decision": {"const": "PASS"}
            },
            "required": ["decision"]
          }
        },
        "required": ["gate_status"]
      },
      "then": {
        "properties": {
          "gate_status": {
            "properties": {
              "open_critical": {"const": 0},
              "open_high": {"const": 0}
            }
          }
        }
      }
    }
  ],
  "additionalProperties": false
}
