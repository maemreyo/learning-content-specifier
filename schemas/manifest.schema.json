{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "lcs.artifact.manifest.v1",
  "title": "LCS Output Manifest Artifact v1",
  "type": "object",
  "required": [
    "contract_version",
    "unit_id",
    "title",
    "locale",
    "generated_at",
    "outcomes",
    "artifacts",
    "gate_status",
    "interop"
  ],
  "properties": {
    "contract_version": {
      "type": "string",
      "pattern": "^1\\.0\\.0$"
    },
    "unit_id": {
      "type": "string",
      "pattern": "^[0-9]{3,}-[a-z0-9-]+$"
    },
    "title": {"type": "string", "minLength": 1},
    "locale": {"type": "string", "minLength": 2},
    "generated_at": {"type": "string", "format": "date-time"},
    "outcomes": {
      "type": "array",
      "items": {
        "type": "object",
        "required": ["lo_id", "priority", "evidence_refs"],
        "properties": {
          "lo_id": {"type": "string", "minLength": 1},
          "priority": {"type": "string", "pattern": "^P[1-9][0-9]*$"},
          "evidence_refs": {"type": "array", "items": {"type": "string", "minLength": 1}}
        },
        "additionalProperties": true
      }
    },
    "artifacts": {
      "type": "array",
      "minItems": 1,
      "items": {
        "type": "object",
        "required": ["id", "type", "path", "media_type", "checksum"],
        "properties": {
          "id": {"type": "string", "minLength": 1},
          "type": {"type": "string", "minLength": 1},
          "path": {"type": "string", "minLength": 1},
          "media_type": {"type": "string", "minLength": 1},
          "checksum": {"type": "string", "pattern": "^sha256:[a-fA-F0-9]{6,}$"}
        },
        "additionalProperties": true
      }
    },
    "gate_status": {
      "type": "object",
      "required": ["decision", "open_critical", "open_high"],
      "properties": {
        "decision": {"type": "string", "enum": ["PASS", "BLOCK"]},
        "open_critical": {"type": "integer", "minimum": 0},
        "open_high": {"type": "integer", "minimum": 0}
      },
      "additionalProperties": true
    },
    "interop": {
      "type": "object",
      "required": ["xapi"],
      "properties": {
        "xapi": {
          "type": "object",
          "required": ["version", "activity_id_set", "statement_template_refs"],
          "properties": {
            "version": {"type": "string", "minLength": 1},
            "activity_id_set": {"type": "array", "items": {"type": "string", "minLength": 1}},
            "statement_template_refs": {"type": "array", "items": {"type": "string", "minLength": 1}}
          },
          "additionalProperties": true
        },
        "case": {"type": "object"},
        "qti": {"type": "object"},
        "lti": {"type": "object"},
        "cmi5": {"type": "object"}
      },
      "additionalProperties": true
    }
  },
  "additionalProperties": true
}
