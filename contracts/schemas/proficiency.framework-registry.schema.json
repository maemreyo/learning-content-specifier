{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "lcs.proficiency.framework-registry.v1",
  "title": "LCS Proficiency Framework Registry v1",
  "type": "object",
  "required": ["registry_version", "frameworks"],
  "properties": {
    "registry_version": {"type": "string", "pattern": "^1\\.0\\.0$"},
    "frameworks": {
      "type": "array",
      "minItems": 1,
      "items": {
        "type": "object",
        "required": ["framework_id", "title", "scales", "dimensions"],
        "properties": {
          "framework_id": {"type": "string", "pattern": "^[a-z0-9-]+\\.v[0-9]+$"},
          "title": {"type": "string", "minLength": 3},
          "scales": {
            "type": "array",
            "minItems": 1,
            "items": {
              "type": "object",
              "required": ["scale_id", "kind"],
              "properties": {
                "scale_id": {"type": "string", "minLength": 1},
                "kind": {"type": "string", "enum": ["ordinal", "numeric"]},
                "ordered_values": {
                  "type": "array",
                  "minItems": 2,
                  "items": {"type": "string", "minLength": 1},
                  "uniqueItems": true
                },
                "min": {"type": "number"},
                "max": {"type": "number"},
                "step": {"type": "number", "exclusiveMinimum": 0}
              },
              "allOf": [
                {
                  "if": {"properties": {"kind": {"const": "ordinal"}}, "required": ["kind"]},
                  "then": {"required": ["ordered_values"]},
                  "else": {"not": {"required": ["ordered_values"]}}
                },
                {
                  "if": {"properties": {"kind": {"const": "numeric"}}, "required": ["kind"]},
                  "then": {"required": ["min", "max", "step"]}
                }
              ],
              "additionalProperties": false
            }
          },
          "dimensions": {
            "type": "array",
            "minItems": 1,
            "items": {"type": "string", "minLength": 1},
            "uniqueItems": true
          }
        },
        "additionalProperties": false
      }
    }
  },
  "additionalProperties": false
}

