{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "lcs.artifact.assessment-blueprint.v1",
  "title": "LCS Assessment Blueprint Artifact v1",
  "type": "object",
  "required": [
    "contract_version",
    "unit_id",
    "subject",
    "template_pack_version",
    "target_distribution",
    "tolerance_percent",
    "lo_mapping"
  ],
  "properties": {
    "contract_version": {
      "type": "string",
      "pattern": "^1\\.0\\.0$"
    },
    "unit_id": {
      "type": "string",
      "pattern": "^[0-9]{3,}-[a-z0-9-]+$"
    },
    "subject": {
      "type": "string",
      "minLength": 2
    },
    "template_pack_version": {
      "type": "string",
      "minLength": 3
    },
    "target_distribution": {
      "type": "array",
      "minItems": 1,
      "items": {
        "type": "object",
        "required": ["template_id", "exercise_type", "ratio_percent"],
        "properties": {
          "template_id": {
            "type": "string",
            "pattern": "^[a-z0-9][a-z0-9.-]*\\.v[0-9]+$"
          },
          "exercise_type": {
            "type": "string",
            "minLength": 2
          },
          "ratio_percent": {
            "type": "number",
            "minimum": 0,
            "maximum": 100
          }
        },
        "additionalProperties": false
      }
    },
    "tolerance_percent": {
      "type": "number",
      "minimum": 0,
      "maximum": 100
    },
    "lo_mapping": {
      "type": "object",
      "minProperties": 1,
      "patternProperties": {
        "^LO[1-9][0-9]*$": {
          "type": "array",
          "minItems": 1,
          "uniqueItems": true,
          "items": {
            "type": "string",
            "pattern": "^[a-z0-9][a-z0-9.-]*\\.v[0-9]+$"
          }
        }
      },
      "additionalProperties": false
    }
  },
  "additionalProperties": false
}
