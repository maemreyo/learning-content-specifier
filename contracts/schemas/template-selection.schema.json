{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "lcs.artifact.template-selection.v1",
  "title": "LCS Template Selection Artifact v1",
  "type": "object",
  "required": [
    "contract_version",
    "unit_id",
    "subject",
    "catalog_version",
    "top_k",
    "selected_templates",
    "selection_rationale"
  ],
  "properties": {
    "contract_version": {
      "type": "string",
      "pattern": "^1\\.0\\.0$"
    },
    "unit_id": {
      "type": "string",
      "pattern": "^[0-9]{3,}-[a-z0-9-]+$"
    },
    "subject": {
      "type": "string",
      "minLength": 2
    },
    "catalog_version": {
      "type": "string",
      "minLength": 3
    },
    "top_k": {
      "type": "integer",
      "minimum": 1,
      "maximum": 10
    },
    "selected_templates": {
      "type": "array",
      "minItems": 1,
      "items": {
        "type": "object",
        "required": [
          "template_id",
          "exercise_type",
          "score",
          "score_breakdown",
          "rationale"
        ],
        "properties": {
          "template_id": {
            "type": "string",
            "pattern": "^[a-z0-9][a-z0-9.-]*\\.v[0-9]+$"
          },
          "exercise_type": {
            "type": "string",
            "minLength": 2
          },
          "score": {
            "type": "number",
            "minimum": 0,
            "maximum": 1
          },
          "score_breakdown": {
            "type": "object",
            "required": [
              "proficiency_fit",
              "lo_fit",
              "level_fit",
              "duration_fit",
              "diversity_fit"
            ],
            "properties": {
              "proficiency_fit": {"type": "number", "minimum": 0, "maximum": 1},
              "lo_fit": {"type": "number", "minimum": 0, "maximum": 1},
              "level_fit": {"type": "number", "minimum": 0, "maximum": 1},
              "duration_fit": {"type": "number", "minimum": 0, "maximum": 1},
              "diversity_fit": {"type": "number", "minimum": 0, "maximum": 1}
            },
            "additionalProperties": false
          },
          "rationale": {
            "type": "string",
            "minLength": 8
          }
        },
        "additionalProperties": false
      }
    },
    "selection_rationale": {
      "type": "string",
      "minLength": 12
    },
    "proficiency_context": {
      "type": "object"
    }
  },
  "additionalProperties": false
}
