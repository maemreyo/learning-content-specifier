{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "lcs.artifact.brief.v1",
  "title": "LCS Brief Artifact v1",
  "type": "object",
  "required": [
    "contract_version",
    "unit_id",
    "title",
    "audience",
    "duration_minutes",
    "learning_outcomes"
  ],
  "properties": {
    "contract_version": {
      "type": "string",
      "pattern": "^1\\.0\\.0$"
    },
    "unit_id": {
      "type": "string",
      "pattern": "^[0-9]{3,}-[a-z0-9-]+$"
    },
    "title": {
      "type": "string",
      "minLength": 1
    },
    "audience": {
      "type": "object",
      "required": [
        "primary",
        "entry_level",
        "delivery_context"
      ],
      "properties": {
        "primary": {"type": "string", "minLength": 3},
        "entry_level": {"type": "string", "enum": ["beginner", "intermediate", "advanced", "mixed"]},
        "delivery_context": {"type": "string", "enum": ["self-paced", "instructor-led", "blended", "cohort-based"]}
      },
      "additionalProperties": false
    },
    "duration_minutes": {
      "type": "integer",
      "minimum": 1
    },
    "learning_outcomes": {
      "type": "array",
      "minItems": 1,
      "maxItems": 20,
      "contains": {
        "type": "object",
        "required": ["priority"],
        "properties": {
          "priority": {"const": "P1"}
        }
      },
      "minContains": 1,
      "items": {
        "type": "object",
        "required": [
          "lo_id",
          "priority",
          "statement",
          "evidence",
          "acceptance_criteria"
        ],
        "properties": {
          "lo_id": {
            "type": "string",
            "pattern": "^LO[1-9][0-9]*$"
          },
          "priority": {
            "type": "string",
            "enum": ["P1", "P2", "P3", "P4", "P5"]
          },
          "statement": {"type": "string", "minLength": 12, "pattern": "^[Ll]earner will be able to .+"},
          "evidence": {"type": "string", "minLength": 12},
          "acceptance_criteria": {
            "type": "array",
            "minItems": 1,
            "maxItems": 5,
            "items": {
              "type": "string",
              "minLength": 20,
              "pattern": ".*Given.*When.*Then.*"
            }
          }
        },
        "additionalProperties": false
      }
    },
    "scope": {
      "type": "object",
      "properties": {
        "in_scope": {"type": "array", "items": {"type": "string"}},
        "out_of_scope": {"type": "array", "items": {"type": "string"}}
      },
      "additionalProperties": false
    },
    "proficiency_targets": {
      "type": "array",
      "minItems": 1,
      "maxItems": 10,
      "items": {
        "type": "object",
        "required": ["framework_id", "scale_id", "target"],
        "properties": {
          "framework_id": {"type": "string", "pattern": "^[a-z0-9-]+\\.v[0-9]+$"},
          "scale_id": {"type": "string", "minLength": 1},
          "dimension": {"type": "string", "minLength": 1},
          "domain_tags": {
            "type": "array",
            "minItems": 1,
            "maxItems": 12,
            "items": {"type": "string", "minLength": 1},
            "uniqueItems": true
          },
          "priority": {"type": "string", "enum": ["P1", "P2", "P3", "P4", "P5"]},
          "provenance": {"type": "string", "minLength": 3},
          "target": {
            "type": "object",
            "oneOf": [
              {
                "required": ["value"],
                "properties": {"value": {"type": ["string", "number"]}},
                "additionalProperties": false
              },
              {
                "required": ["min", "max"],
                "properties": {"min": {"type": ["string", "number"]}, "max": {"type": ["string", "number"]}},
                "additionalProperties": false
              }
            ]
          }
        },
        "additionalProperties": false
      }
    }
  },
  "additionalProperties": false
}
